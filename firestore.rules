rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles: Users can read/write their own document (Key = Email) AND all subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == userId);
    }
    
    // Community Portfolios: Readable by all, writable by auth users (create only?) 
    // Adjust logic as needed, but for now simple read is safe for public data.
    match /community_portfolios/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Predictions: Public read
    match /predictions/{predId} {
      allow read: if true;
      allow write: if request.auth != null; // Ideally admin only
    }

    // Default: Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
